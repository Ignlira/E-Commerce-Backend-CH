<header>
    <h1>Carrito</h1>
</header>

<main>
    <section>
        <ol>
            {{#each data.docs}}
            <li>{{this.name}}</li>
            <ul>
                {{#each this.products}}
                <li>{{this.name}}, {{this.price}}</li>
                {{/each}}
            </ul>
            {{/each}}
            <button class="btn btn-primary" id="remove-from-cart">Eliminar del carrito</button>
            <button class="btn btn-primary" id="checkout">Pagar</button>
        </ol>
    </section>
</main>