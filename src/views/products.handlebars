
<h1>Products</h1>

  <ul class="products-list">
    {{#each products}}
      <li class="product">
        <h2>{{name}}</h2>
        <p>Precio: {{price}}</p>
        <img src="{{imageUrl}}" alt="{{name}}">
        <p>{{description}}</p>
        <a href="/products/{{_id}}">Ver detalles</a>
      </li>
    {{/each}}
  </ul>

<script src="/public/js/products.script.js"></script>